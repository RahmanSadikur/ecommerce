@model NMS.Models.ViewModel.ProductImageViewModel
@{
    ViewBag.Title = "GetDetail";
    Layout = "~/Views/Shared/_LayoutPageGuest.cshtml";
}

<h2>GetDetail</h2>

<div class="container-fluid">
    @if (Model.products != null)
    {
        <div class="row">
           
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                @for (int i = 0; i < Model.Images.Count(); i++)
                {
                    <ol class="carousel-indicators">

                        <li data-target="#carouselExampleIndicators" data-slide-to=@i></li>

                    </ol>
                    <div class="carousel-inner">

                        <div class="carousel-item">
                            <img class="d-block w-100" src="..." alt="Second slide">
                        </div>

                    </div>


                }

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
           


                <div class="col col-sm-2"></div>
                <div class="col col-sm-8">
                    <div class="card">

                        <div class="card-header bg-primary "><h1>@Model.products.productName</h1></div>
                        <div class="card-body">
                            <p> Description:@Model.products.productDescription</p>
                            <div class="align-content-center bg-success">
                                Status:@Model.products.productStatus
                            </div>
                            <p> Price:@Model.products.productPrice</p>

                        </div>
                        <div class="card-footer bg-warning btn">Add To Favourite</div>

                    </div>
                </div>
                <div class="col col-sm-2">


                </div>
                <br />
                <br />






           
            </div>
        }
        </div>