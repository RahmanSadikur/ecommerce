@model List<NMS.Models.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div class="container-fluid p-5">
        <h2>CategoryList</h2>
        <div class="row">
            <div class="col col-sm-3"> @Html.ActionLink("New", "EditCategory", new { Controller = "Owner", id = -1 }, new { @class = "btn btn-success" })</div>
        </div>
        <div class="row ">
            <table class=" table-striped w-100 pt-5">
                <tr class="thead-light">
                    <th>Category Name</th>
                    <th>Edit</th>

                </tr>
                @foreach (var cat in @Model)
                {
                    <tr>
                        <td>
                            @cat.categoryName
                        </td>
                        <td>
                            @Html.ActionLink("EDIT", "EditCategory", new { Controller = "Owner", id = cat.categoryId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
