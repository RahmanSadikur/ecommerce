@model NMS.Models.ViewModel.CategoryViewModel
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container-fluid p-5">
    <h2>ProductList</h2>
    <div class="row">
        <div class="col col-sm-3"> @Html.ActionLink("New", "EditProduct", new { Controller = "Owner", id =-1 }, new { @class = "btn btn-success" })</div>
    </div>
    <div class="row">
        <table class="table-striped w-100 pt-5">
            <tr class="thead-light w-100">
                <th>Pinned Product ? </th>
                <th>Product Name</th>
                <th>Product Description</th>
                <th>Product Status</th>
                <th>Product color</th>
                <th>Product Price</th>

                <th>Parent Sub Category Name</th>
                <th>Edit</th>

            </tr>
            @foreach (var product in @Model.Products)
            {
        <tr>
            <td>
                @product.isPinnedProduct
            </td>
            <td>
                @product.productName
            </td>
            <td>
                @product.productDescription
            </td>
            <td>
                @product.productStatus
            </td>
            <td>
                @product.color
            </td>
            <td>
                @product.productPrice
            </td>
            <td>
                @Model.SubCategories.FirstOrDefault(m => m.subCategoryId == product.subCategoryId).subCategoryName
            </td>

            <td>
               
            </td>
            <td>
                @Html.ActionLink("EDIT", "EditProduct", new { Controller = "Owner", id = product.productId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
            }
        </table>
    </div>
</div>